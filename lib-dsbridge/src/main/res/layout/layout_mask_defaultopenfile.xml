<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_mywebview_mask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#83939393"
    android:orientation="vertical">

    <View
        android:id="@+id/openfile_mask_out"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_bottom_bgc"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/openfile_mask_img"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:adjustViewBounds="false"
                android:padding="10px"
                android:src="@mipmap/icon_fanshu" />

            <com.heiko.stripeprogressbar.StripeProgressBar
                android:id="@+id/openfile_mask_progressBar"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:layout_gravity="center|bottom"
                app:progress_background="#94BEF5"
                app:progress_image="@mipmap/updatabar"
                app:progress_max="100"
                app:progress_radius="10dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/openfile_mask_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="加载中..."
            android:textColor="#000" />

    </LinearLayout>


</LinearLayout>